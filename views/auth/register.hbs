<div class="row justify-content-center mt-4">
  <div class="col-sm-4">
    <h1>Register</h1>
    <form method="POST" action="/register">
      <div class="form-group mb-3">
        <label for="name">Name</label>
        <input
          id="name"
          value="{{user.name}}"
          name="name"
          type="text"
          class="form-control {{#if errors.name}}is-invalid{{/if}}"
          placeholder="Name"
        >
        {{#if errors.name}}
          <div class="invalid-feedback">{{errors.name}}</div>
        {{/if}}
      </div>
      <div class="form-group mb-3">
        <label for="email">Email</label>
        <input
          id="email"
          value="{{user.email}}"
          name="email"
          type="email"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          placeholder="example@example.com"
        >
        {{#if errors.email}}
          <div class="invalid-feedback">{{errors.email}}</div>
        {{/if}}
      </div>

      <div class="form-group mb-3">
        <label for="password">Password</label>
        <input
          id="password"
          name="password"
          type="password"
          class="form-control {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password"
        >
        {{#if errors.password}}
          <div class="invalid-feedback">{{errors.password}}</div>
        {{/if}}
      </div>

      <!--<div class="input-group mb-3">
        <input type="file" name="avatar"
          class="custom-form-control form-control border-0 py-2 ps-4 {{#if errors.password}}is-invalid{{/if}}">
      </div>-->

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>