<div class="row justify-content-center mt-4">
  <div class="col-sm-4">
    <h1>Register</h1>
    <form action="/register" method="POST">
      <div class="form-group mb-3">
        <label for="name">Name</label>
        <input
          id="name"
          value="{{user.name}}"
          name="name"
          type="text"
          class="form-control {{#if errors.name}}is-invalid{{/if}}"
          placeholder="Name"
        >
      <div class="invalid-feedback">{{errors.name}}</div>
      </div>
      <div class="form-group mb-3">
        <label for="email">Email</label>
        <input
          id="email"
          value="{{user.email}}"
          name="email"
          type="email"
          class="form-control {{#if errors.email}}is-invalid{{/if}}"
          placeholder="example@example.com"
        >
      <div class="invalid-feedback">{{errors.email}}</div>
      </div>

      <div class="form-group mb-3">
        <label for="password">Password</label>
        <input
          id="password"
          name="password"
          type="password"
          class="form-control {{#if errors.password}}is-invalid{{/if}}"
          placeholder="Password"
        >
        <div class="invalid-feedback">{{errors.password}}</div>
      </div>
      <div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/login/google" class="btn btn-outline-primary">Sign up with Google</a>
      </div>
      <div>
        <a href="/login">Already have an account?</a>
      </div>
    </form>
  </div>
</div>